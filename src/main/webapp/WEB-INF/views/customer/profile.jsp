<!-- Modal -->

 <div id="editUser" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form action="profile" method="post">
                        <div class="modal-header">						
                            <h4 class="modal-title">Edit Profile</h4>
